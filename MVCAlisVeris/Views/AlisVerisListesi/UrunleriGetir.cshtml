@model List<DAL.Models.Urun>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UrunleriGetir</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Alış Veriş Yap</h1>
        </div>
        <table class="table">
            <thead>
                <tr class="table-info">
                    <th>Satın Al</th>
                    <th>Ad</th>
                    <th>Resim</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var urun in Model)
                {
                <tr>
                    <td>
                        <input type="checkbox" name="@urun.id" id="@urun.id" value="@urun.id" />
                    </td>
                    <td>
                        @urun.Ad
                    </td>
                    <td>
                        <input type="image" src="~/Resimler/@urun.Resim" width="200" height="100" alt="@urun.Ad" />
                    </td>
                    <td>
                        @(urun.Fiyat)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
